<div class="log_in--window">
    <h1>Login</h1>
    <form  action="/login" method="post" class="log_in--form">
        <div class="input__field">
            <input type="text" id="input--username" name="username" autocomplete="off" required>
            <span></span>
            <label for="input--username"><i class="fa fa-light fa-user"></i>Username</label>
        </div>

        <div class="input__field">
            <input type="password" id="input--password" name="password" required>
            <span></span>
            <label for="input--password"><i class="fa fa-solid fa-lock"></i>Password</label>
        </div>
        {{#if loginError}}
            <p class="error">{{loginError}}</p>
        {{/if}}
        <div class="extra__options">
            <div class="input--remember_me">
                <input type="checkbox" id="input--remember_me" name="remember_me">
                <label for="input--remember_me">Remember Me</label>
            </div>
            <div class="forgot-pass">Forgot Password?</div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="log__in--button" id="log__in--button">Login</button>
        <div class="sign_up-link">
            <span>Not a member?</span>
            <a href="/registration" class="sign_up-link--button">Join now </a>
        </div>
    </form>
</div>


